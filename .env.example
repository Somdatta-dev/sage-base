# =============================================================================
# SageBase Environment Configuration
# Copy this file to .env and update with your production values
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_USER=sagebase
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=sagebase
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Application Security
# -----------------------------------------------------------------------------
# IMPORTANT: Generate a secure random secret key for production
# You can generate one using: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
# Set these to your actual domain URLs in production
API_DOMAIN=https://api.yourdomain.com
WEBSITE_DOMAIN=https://yourdomain.com

# Or for local development:
# API_DOMAIN=http://localhost:8787
# WEBSITE_DOMAIN=http://localhost:3000

# -----------------------------------------------------------------------------
# Vector Database (Qdrant)
# -----------------------------------------------------------------------------
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# -----------------------------------------------------------------------------
# AI Configuration
# -----------------------------------------------------------------------------
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# -----------------------------------------------------------------------------
# Default Admin User
# -----------------------------------------------------------------------------
# These credentials will be used to create the initial admin user
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=CHANGE_THIS_SECURE_PASSWORD

# -----------------------------------------------------------------------------
# Application Ports (Optional)
# -----------------------------------------------------------------------------
APP_PORT=3000
API_PORT=8787

# -----------------------------------------------------------------------------
# Build Configuration (Optional)
# -----------------------------------------------------------------------------
# Used to uniquely identify builds and prevent Server Action errors
BUILD_ID=production

# -----------------------------------------------------------------------------
# Nixpacks Configuration (For Coolify/Railway/Render)
# -----------------------------------------------------------------------------
# Specify Node.js version for Nixpacks-based deployments
NIXPACKS_NODE_VERSION=22

# -----------------------------------------------------------------------------
# Timeout Settings
# -----------------------------------------------------------------------------
# High timeout values for AI operations and large document processing
# Backend API timeout (in seconds)
API_TIMEOUT=600

# Uvicorn timeout settings (in seconds)
UVICORN_TIMEOUT_KEEP_ALIVE=300
UVICORN_TIMEOUT_GRACEFUL_SHUTDOWN=30

# Database connection timeout (in seconds)
DB_POOL_TIMEOUT=60
DB_COMMAND_TIMEOUT=300

# AI/LLM request timeout (in seconds)
OPENAI_TIMEOUT=300
AI_PROCESSING_TIMEOUT=600

# File upload timeout (in seconds)
UPLOAD_TIMEOUT=300

# Next.js server timeout (in milliseconds)
NEXT_SERVER_TIMEOUT=300000
